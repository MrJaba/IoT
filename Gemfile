source 'https://rubygems.org'

# Event driven application server
gem "goliath"

# Persistent Key Value store used for storing data
gem "redis"

# Redis ORM used to map model data to maps to store in Redis
gem "ohm"
gem "ohm-contrib"

# Rack compatible router
gem "grape"

# This allows us to do simple Thread based Client Actors
gem "celluloid"

# Http Client library to communicate with the API from Clients
gem "httparty"

# Template handling library
gem "tilt"

# Haml Templating library
gem "haml"

# Markdown rendering library
gem "bluecloth"

# For when things go boom.
gem "debugger"